<h1><%= @cocktail.name %> </h1>

<ul>
  <% @doses.each do |dose| %>
    <li><%= dose.description %></li>
    <li><%= link_to "Delete dose", dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } %></li>
  <% end %>
</ul>

<p><%= link_to "Add doses", new_cocktail_dose_path(@cocktail) %></p>

<p><%= link_to "Get back to cocktails' list' ", cocktails_path %></p>



